import javax.swing.*;
import javax.swing.JPanel;
import javax.swing.JTextField;

class paintSort extends JFrame implements ActionListener{
    JPanel p1=new JPanel();
	JTextField t1=new JTextField(30);
	JTextField t2=new JTextField(30);
	JTextField t3=new JTextField(30);
	
	
	JLabel L1=new JLabel("输入要排序的数字，数字间用空格隔开");
	JLabel L2=new JLabel("排序复杂度");
	
	JButton b1=new JButton("冒泡排序");
	JButton b2=new JButton("插入排序");
	JButton b3=new JButton("快速排序");
	
	
	public paintSort(){
		super("排序界面");
		Container c=this.getContentPane();
		t2.setForeground(Color.blue);//被忽略了
		t2.setEditable(false);
		
		
		p1.setLayout(null);
		t1.setBounds(100, 100,100,30);
		L1.setBounds(100,50,400,30);
		b1.setBounds(225,100,100,30);   //冒泡排序
		b2.setBounds(335,100, 100, 30);//插入排序
		b3.setBounds(450,100,100,30);
		t2.setBounds(100,180,100,30);
		t2.setBackground(Color.white);
		//L2.setBounds(230,180,100,30);
		
		
		b1.addActionListener(this);
		b2.addActionListener(this);
		b3.addActionListener(this);
		
		
		p1.add(t1);
		p1.add(L1);
		p1.add(b1);
		p1.add(t2);
		p1.add(b2);
		p1.add(b3);
		p1.add(t3);
		p1.add(L2);
		c.add(p1);
		
		
		
		
		
		this.setLocation(200, 100);
		this.setSize(600, 400);
		setVisible(true);
	}
	
	
	public void actionPerformed(ActionEvent e) {
		// TODO Auto-generated method stub
		BubbleSort bs=new BubbleSort();
		InsertSort is=new  InsertSort();
		QuickSort qs=new QuickSort();
		try{
			String s=t1.getText();	
			String ss[]=s.split(" ");
			
			int sLength=ss.length;
			System.out.println(sLength);
	     	int integer[]=new int[sLength];
			for(int i=0;i<sLength;i++){
				integer[i]=Integer.parseInt(ss[i]);
			}
			
			if(e.getSource()==b1){
				
				bs.Sort(ss, 2, sLength);
				t2.setText("冒泡排序\n"+ss[0]+" "+ ss[1]+" "+ss[2]+bs.getCom());
			}
			if(e.getSource()==b2){
			is.Sort(ss, 2, sLength);
			    t2.setText("插入排序"+ss[0]+" "+ ss[1]+" "+ss[2]+is.getCom());
			}
			if(e.getSource()==b3){
				qs.Sort( ss, 2, sLength);
				t2.setText("快速排序"+ss[0]+" "+ss[1]+" "+ss[2]+" "+qs.getCom());
			}
			
		}
		catch(Exception ex){
			
		}
		
	}
}
